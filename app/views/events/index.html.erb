
<div class="container">
	<div class="text-center">
		<h2>Events</h2> 
	</div>
</div>  
        
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Serves Alcohol?</th>
      </tr>
    </thead>
    <tbody>
    	<% @events.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.alcohol_served %></td>
        <td><%= t.venue_id %></td> 
        <td><%= t.band_id %></td>
        <td><%= link_to "Edit Event", edit_event_path(t) %></td>
      </tr>
       <% end %>
    </tbody>
  </table>

  <div class="container">
    <div class="col-sm-4 col-sm-offset-4">
<!-- basic search form. Need to rework this -->
  <%= form_tag("/show", method: "get") do %>
      <%= label_tag(:date, "Search for:") %>
      <%= text_field_tag(:date) %>
    <%= submit_tag("Search") %>
<% end %>
  </div>
</div>

<div class="text-center">
  <%= link_to "Create New Event", new_event_path %>
</div>



